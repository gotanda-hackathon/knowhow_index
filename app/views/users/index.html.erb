<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <div class="d-flex align-items-center">
          <div>
            <h5 class="card-title"><%= t('views.user.index') %></h5>
          </div>
          <% if current_user.grader? %>
            <div class="ml-auto">
              <%= link_to new_company_user_path(current_user.company), data: { turbolinks: false }, class: "btn blue" do %>
                <span><%= t('views.default.new') %></span>
                <i class="material-icons right">add</i>
              <% end %>
            </div>
          <% end %>
        </div>
        <div class="table-responsive m-b-20">
          <table class="">
            <thead>
              <%= render 'thead' %>
            </thead>
            <tbody>
              <%= render partial: 'tbody', locals: { users: @users }%>
            </tbody>
          </table>
        </div>
        <%= paginate @users %>
      </div>
    </div>
  </div>
</div>
