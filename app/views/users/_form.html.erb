<div class="row">
  <div class="input-field col s6">
    <%= f.label :name %>
    <%= f.text_field :name %>
    <p class="red-text text-darken-4"><%= user.error_messages_for :name %></p>
  </div>
</div>
<div class="row">
  <div class="input-field col s6">
    <%= f.label :email %>
    <%= f.email_field :email %>
    <p class="red-text text-darken-4"><%= user.error_messages_for :email %></p>
  </div>
</div>
<div class="row">
  <div class="input-field col s6">
    <%= f.label :password %>
    <%= f.password_field :password %>
    <p class="red-text text-darken-4"><%= user.error_messages_for :password %></p>
  </div>
</div>
<div class="row">
  <div class="input-field col s6">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <p class="red-text text-darken-4"><%= user.error_messages_for :password_confirmation %></p>
  </div>
</div>
<div class="row">
  <div class="input-field col s6">
    <p>
      <%= f.check_box :grader %>
      <span><%= f.label :grader %><span>
    </p>
  </div>
</div>
<%= f.hidden_field :company_id, value: current_user.company.id %>
<%= f.submit class: 'btn blue' %>
