
<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <div class="d-flex align-items-center">
          <div>
            <h5 class="card-title"><%= t('views.company.index') %></h5>
          </div>
        </div>
        <h5 id="companies_count"><%= companies.total_count if companies %> ä»¶</h5>
        <%= form_with scope: :search_form, url: admin_companies_path, method: :get, local: true do |f| %>
          <div class="row">
            <div class="input-field col s4">
              <%= f.text_field :name, id: 'name' %>
              <%= f.label Company.human_attribute_name(:name), for: :name %>
            </div>
          </div>
          <div class="right-align">
            <%= button_tag type: 'submit', class: "btn orange" do %>
              <span><%= t('views.default.search') %></span>
              <i class="material-icons right">search</i>
            <% end %>
            <%= link_to new_admin_company_path, class: "btn blue" do %>
              <span><%= t('views.default.new') %></span>
              <i class="material-icons right">add</i>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
