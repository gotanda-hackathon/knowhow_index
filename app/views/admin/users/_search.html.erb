
<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <div class="d-flex align-items-center">
          <div>
            <h5 class="card-title"><%= t('views.user.index') %></h5>
          </div>
        </div>
        <h5 id="users_count"><%= users.total_count if users %> 件</h5>
        <%= form_with scope: :search_form, url: admin_users_path, method: :get, local: true do |f| %>
          <div class="row">
            <div class="user_ids input-field col s4">
              <%= f.collection_select :user_ids, User.all, :id, :name, { include_blank: true }, id: 'names', multiple: true %>
              <%= f.label User.human_attribute_name(:user_id), for: :names %>
            </div>
            <div class="company_ids input-field col s4">
              <%= f.collection_select :company_ids, Company.all.order(:id), :id, :name, { include_blank: true }, id: 'divisions', multiple: true %>
              <%= f.label User.human_attribute_name(:company_id), for: :companies %>
            </div>
            <div class="input-field col s4">
              <%= f.text_field :email, id: 'email' %>
              <%= f.label User.human_attribute_name(:email), for: :email %>
            </div>
          </div>
          <div class="row">
            <div class="grader_flag input-field col s4">
              <%= f.select :grader, [['あり', true], ['なし', false]], { include_blank: true }, id: 'grader' %>
              <%= f.label User.human_attribute_name(:grader), for: :grader %>
            </div>
            <div class="administrator_flag input-field col s4">
              <%= f.select :administrator, [['あり', true], ['なし', false]], { include_blank: true }, id: 'administrator' %>
              <%= f.label User.human_attribute_name(:administrator), for: :administrator %>
            </div>
          </div>
          <div class="right-align">
            <%= button_tag type: 'submit', class: "btn orange" do %>
              <span><%= t('views.default.search') %></span>
              <i class="material-icons right">search</i>
            <% end %>
            <%= link_to new_admin_user_path, class: "btn blue" do %>
              <span><%= t('views.default.new') %></span>
              <i class="material-icons right">add</i>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
