<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <div class="d-flex align-items-center">
          <div>
            <h5 class="card-title"><%= t('views.user.index') %></h5>
          </div>
          <div class="ml-auto">
            <%= link_to new_admin_user_path, data: { turbolinks: false }, class: "btn blue" do %>
              <span><%= t('views.default.new') %></span>
              <i class="material-icons right">add</i>
            <% end %>
          </div>
        </div>
        <div class="table-responsive m-b-20">
          <table class="">
            <thead>
              <%= render 'thead' %>
            </thead>
            <tbody>
              <%= render partial: 'tbody', locals: { users: @users }%>
            </tbody>
          </table>
        </div>
        <%= paginate @users %>
      </div>
    </div>
  </div>
</div>
