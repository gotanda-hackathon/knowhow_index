<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <div class="d-flex align-items-center">
          <div>
            <h5 class="card-title"><%= t('views.front.top') %></h5>
          </div>
        </div>
        <div class="table-responsive m-b-20">
          <%= form_with scope: :session, local: true do |f| %>
            <div class="row">
              <div class="input-field col s6">
                <%= f.label :email %>
                <%= f.text_field :email %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s6">
                <%= f.label :password %>
                <%= f.text_field :password %>
              </div>
            </div>
            <%= f.submit t('views.session.login'), class: 'btn blue' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
