<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <div class="d-flex align-items-center">
          <div>
            <h5 class="card-title"><%= t("views.#{controller_name.singularize}.#{controller.action_name}") %></h5>
          </div>
        </div>
        <div class="table-responsive m-b-20">
          <%= form_with model: @creative, url: company_creative_path(current_creative.company, @creative), local: true do |f| %>
            <%= render partial: 'form', locals: { f: f, creative: @creative } %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
