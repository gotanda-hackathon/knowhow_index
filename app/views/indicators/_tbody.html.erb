<% @indicators.each.with_index(1) do |indicator, i| %>
  <tr id="indicator_<%= indicator.id %>">
    <td><%= i %></td>
    <td><%= indicator.name %></td>
    <% if current_user.grader? %>
      <td id="edit_btn_<%= indicator.id %>">
        <%= link_to edit_company_indicator_path(current_user.company, indicator), class: "btn green" do %>
          <%= t('views.default.edit') %>
          <i class="material-icons right">edit</i>
        <% end %>
      </td>
      <td id="delete_btn_<%= indicator.id %>">
        <%= link_to company_indicators_path(current_user.company, indicator), method: :delete, data: { confirm: t('messages.destroy_confirm') }, class: "btn red" do %>
          <%= t('views.default.destroy') %>
          <i class="material-icons right">delete</i>
        <% end %>
      </td>
    <% end %>
  </tr>
<% end %>
