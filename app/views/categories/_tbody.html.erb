<% categories.each.with_index(1) do |cateogry, i| %>
  <tr id="cateogry_<%= cateogry.id %>">
    <td><%= i %></td>
    <td><%= cateogry.name %></td>
    <% if current_user.grader? %>
      <td id="edit_btn_<%= cateogry.id %>">
        <%= link_to edit_company_cateogry_path(current_user.company, cateogry), class: "btn green" do %>
          <%= t('views.default.edit') %>
          <i class="material-icons right">edit</i>
        <% end %>
      </td>
      <td id="delete_btn_<%= cateogry.id %>">
        <%= link_to company_cateogry_path(current_user.company, cateogry), method: :delete, data: { confirm: t('messages.destroy_confirm') }, class: "btn red" do %>
          <%= t('views.default.destroy') %>
          <i class="material-icons right">delete</i>
        <% end %>
      </td>
    <% end %>
  </tr>
<% end %>
