<% categories.each.with_index(1) do |category, i| %>
  <tr id="category_<%= category.id %>">
    <td><%= i %></td>
    <td><%= category.name %></td>
    <% if current_user.grader? %>
      <td id="edit_btn_<%= category.id %>">
        <%= link_to edit_company_category_path(current_user.company, category), class: "btn green" do %>
          <%= t('views.default.edit') %>
          <i class="material-icons right">edit</i>
        <% end %>
      </td>
      <td id="delete_btn_<%= category.id %>">
        <%= link_to company_category_path(current_user.company, category), method: :delete, data: { confirm: t('messages.destroy_confirm') }, class: "btn red" do %>
          <%= t('views.default.destroy') %>
          <i class="material-icons right">delete</i>
        <% end %>
      </td>
    <% end %>
  </tr>
<% end %>
